x = int(input('Введите число. Какое бы вы ни ввели, черепашка рано или поздно начнёт бегать по кругу '))
from turtle import *
shape('turtle')
pensize(2)
f = 10
while True:
    if x % 2 == 1:
        left(30)
        forward(f)
        x = x * 3 + 1
    else:
        right(30)
        forward(f)
        x = x / 2
